{
    "name": "bgsu-lits/auth",
    "description": "User frontend for LITS Framework Auth.",
    "license": "MIT",
    "authors": [
        {
            "name": "John Kloor",
            "email": "kloor@bgsu.edu"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-PDO": "*",
        "ext-filter": "*",
        "ext-hash": "*",
        "bgsu-lits/framework": "^1.10.0",
        "bgsu-lits/framework-auth": "^1.2.0",
        "bgsu-lits/framework-database": "^1.2.0",
        "bgsu-lits/framework-mail": "^1.0.0",
        "jasny/auth": "^2.2",
        "slim/http": "^1.1",
        "slim/slim": "^4.2"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "neronmoon/scriptsdev": "^0.1.9",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-master"
    },
    "replace": {
        "ext-sodium": "*",
        "ext-zip": "*"
    },
    "autoload": {
        "psr-4": {
            "Lits\\": "src/Lits"
        },
        "exclude-from-classmap": [
            "/src/Lits/Test/"
        ]
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "neronmoon/scriptsdev": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        },
        "scripts-dev": {
            "phpcbf": "phpcbf ./ --standard=phpcs.xml",
            "phpcs": "phpcs ./ --standard=phpcs.xml",
            "phplint": "phplint ./ --exclude=vendor",
            "phpstan": "phpstan analyse -c phpstan.neon",
            "phpunit": "phpunit -c phpunit.xml",
            "psalm": "psalm --config=psalm.xml",
            "test": [
                "@phplint",
                "@phpcs",
                "@phpstan",
                "@psalm",
                "@phpunit"
            ],
            "twigcs": "twigcs ./template"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@reset-cache"
        ],
        "post-update-cmd": [
            "@reset-cache"
        ],
        "migration": "phoenix",
        "migration-create": "phoenix create --template migration.template",
        "reset-cache": "rm -rf ./cache/*"
    },
    "scripts-descriptions": {
        "reset-cache": "Resets the application by deleting all cache files."
    }
}
